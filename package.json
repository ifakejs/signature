{
  "name": "@ifake/signature",
  "version": "0.5.0",
  "description": "A signature library for web.",
  "main": "dist/index.umd.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "eslint src --fix --ext .ts",
    "test": "jest --coverage",
    "start": "cross-env NODE_ENV=development rollup -c -w",
    "build": "cross-env NODE_ENV=production rollup -c && yarn run build:clear",
    "build:clear": "ts-node --project tsconfig.build.json scripts/build.ts",
    "build:demo": "ts-node --project tsconfig.build.json scripts/resolveAssetsPath.ts",
    "start:example": "serve -l 8080 -C -n",
    "serve": "npm-run-all --parallel start start:**",
    "postpublish": "git push origin --all; git push origin --tags",
    "postversion": "yarn run changelog && yarn run build && npm publish",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "dist"
  ],
  "keywords": [
    "signature",
    "canvas",
    "draw",
    "canvas-draw"
  ],
  "author": "ifake",
  "license": "MIT",
  "homepage": "https://github.com/ifakejs/signature",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --write --config .prettierrc.js \"src/**/*.{js,ts}\"",
      "yarn run lint"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-modules-commonjs": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.1.0",
    "@types/chalk": "^2.2.0",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/fs-extra": "^9.0.6",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "chalk": "^4.1.0",
    "codecov": "^3.8.1",
    "conventional-changelog-cli": "^2.1.1",
    "cross-env": "^7.0.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-canvas-mock": "^2.3.0",
    "lint-staged": "^10.5.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.34.0",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@babel/runtime": "^7.12.5"
  }
}
